<div class="row row-centered">
	<div class="col-md-12">
		<h1><%= Spree.t(:create_a_wishlist) %></h1>
		<p class="intro">Build a wishlist that you can use for later, or share with friends!</p>
		<%= form_for @wishlist do |f| %>
		  <p><%= f.label :name, Spree.t(:name) %>:&nbsp;<%= f.text_field :name %></p>
		  <p><%= f.check_box :is_private %>&nbsp;<%= f.label :is_private, Spree.t(:is_private) %> (prevent others from viewing your wishlist)</p>
		  <%= f.submit Spree.t(:create), class: "btn btn-primary" %>
		<% end -%>
	</div>
</div>